<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_container_height"
        android:background="@color/colorForeground"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/listContainerStyle"
            >
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkbox_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/rsp_option_margin_start"
                android:layout_gravity="center"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/barrier_start"
                />
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="tv_option_type, tv_option_description"
                app:barrierDirection="start"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_option_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/rsp_option_margin_start"
                android:layout_marginEnd="@dimen/rsp_option_margin_end"
                style="@style/listItemTextStyle"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_option_description"
                app:layout_constraintStart_toEndOf="@id/barrier_start"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_option_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/rsp_option_margin_start"
                android:layout_marginEnd="@dimen/rsp_option_margin_end"
                style="@style/listItemTextStyle"
                app:layout_constraintTop_toBottomOf="@id/tv_option_type"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/barrier_start"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>